<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Coin_Fliper.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Coin_Fliper"
    Shell.FlyoutBehavior="Disabled"
    Title="Coin_Fliper">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="FlipCoin"
            ContentTemplate="{DataTemplate local:CoinFlip_Overview}"
            Route="CoinFlip_Overview" />

    </TabBar>
</Shell>
