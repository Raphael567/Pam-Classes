<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HTTP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HTTP.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="HTTP">
    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:PostView}"
            Route="PostView" />

        <ShellContent
            Title="Criar Postagem"
            ContentTemplate="{DataTemplate local:CreatePostView}"
            Route="CreatePostView"/>
    </TabBar>
</Shell>
