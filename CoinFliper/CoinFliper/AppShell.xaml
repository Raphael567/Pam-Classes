<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CoinFliper.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CoinFliper"
    Shell.FlyoutBehavior="Disabled"
    Title="CoinFliper">
    
    <ShellContent 
        Title="Number of Playes"
        ContentTemplate="{DataTemplate local:NumberPlayers}"
        Route="NumberPlayers"/>
        
    <ShellContent 
        Title="Coin Fliper"
        ContentTemplate="{DataTemplate local:CoinFlip_Overview}"
        Route="CoinFlip_Overview"/>

    <ShellContent 
        Title="Coin Flip Two Players"
        ContentTemplate="{DataTemplate local:CoinFlip_TwoPlayers}"
        Route="CoinFlip_TwoPlayers"/>

</Shell>
